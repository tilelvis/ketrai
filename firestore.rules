rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check user roles
    function isRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    function isOneOfRoles(roles) {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return userRole in roles;
    }

    // Users can read their own profile, admins can read any profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isRole('admin');
      allow write: if request.auth.uid == userId;
      // Notifications subcollection
      match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Invites can be read by anyone with the link token (for sign-up), but only created/managed by admins
    match /invites/{inviteId} {
      allow read: if request.auth != null;
      allow create, update: if isRole('admin');
    }

    // Audit logs are immutable (append-only)
    match /auditLogs/{logId} {
      allow create: if request.auth != null;
      allow read: if isRole('admin'); // Admins can read all audit logs
      allow update, delete: if false;
    }

    // Claims collection rules
    match /claims/{claimId} {
      // Users can only read their own claims
      allow get: if request.auth.uid == resource.data.requesterId || isOneOfRoles(['admin', 'claims', 'manager']);
      
      // Admins and claims officers can list claims for the queue/history
      allow list: if isOneOfRoles(['admin', 'claims', 'manager']);

      // Dispatchers, Support, and Claims officers can create claims
      allow create: if isOneOfRoles(['dispatcher', 'support', 'claims']);

      // Only admins and claims officers can update a claim (e.g., approve/reject)
      allow update: if isOneOfRoles(['admin', 'claims']);

      // No one can delete claims
      allow delete: if false;

      // History subcollection
      match /history/{historyId} {
        allow read: if isOneOfRoles(['admin', 'claims', 'manager']);
        allow create: if isOneOfRoles(['admin', 'claims']);
        allow update, delete: if false;
      }
    }
  }
}
