rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profile + preferences
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Notifications - only visible to owner
      match /notifications/{notifId} {
        allow read, update: if request.auth.uid == userId;
        allow create: if request.auth.token.admin == true || request.auth.uid == userId;
      }
    }
    
    // Invites can be read with a valid token, and created by admins.
    match /invites/{inviteId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.token.admin == true;
      allow update: if request.auth != null; // For accepting/cancelling
    }

    // Claims workflow
    match /claims/{claimId} {
      // Users can create their own claims
      allow create: if request.auth != null;
      // Users can read their own claims, admins can read any
      allow read: if request.auth != null && 
                (resource.data.requester.uid == request.auth.uid ||
                 get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'claims', 'manager']);
      // Only admins/claims/managers can update status
      allow update: if request.auth != null &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'claims', 'manager'];
      
      // Claim history is an append-only log
      match /history/{eventId} {
        // Requester and admins/claims/managers can add history
        allow create: if request.auth != null && (
            get(/databases/$(database)/documents/claims/$(claimId)).data.requester.uid == request.auth.uid ||
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'claims', 'manager']
        );
        // Requester and admins/claims/managers can read history
        allow read: if request.auth != null && (
            get(/databases/$(database)/documents/claims/$(claimId)).data.requester.uid == request.auth.uid ||
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'claims', 'manager']
        );
        // History is immutable
        allow update, delete: if false;
      }
    }
  }
}