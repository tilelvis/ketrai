
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profile + preferences
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Notifications - only visible to owner
      match /notifications/{notifId} {
        allow read, update: if request.auth.uid == userId;
        // Admins can create notifications for users.
        allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'claims', 'manager'];
      }
    }

    // Users can create their own claims. Admins/Managers/Claims can list/read all.
    match /claims/{claimId} {
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['support', 'dispatcher', 'claims', 'manager', 'admin'];
      allow read: if request.auth != null && (request.auth.uid == resource.data.requesterId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['claims', 'manager', 'admin']);
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['claims', 'manager', 'admin'];
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['claims', 'admin'];
    }

    // Claim history is an immutable, append-only log
    match /claims/{claimId}/history/{eventId} {
      allow create: if request.auth != null; // Requester and admin can append
      allow read: if request.auth != null && (get(/databases/$(database)/documents/claims/$(claimId)).data.requesterId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['claims', 'manager', 'admin']);
      allow update, delete: if false;
    }

    // Invites can only be read/written by admins
    match /invites/{inviteId} {
        // Allow public read for token verification on the invite page
        allow read: if true;
        allow list, create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Audit logs are append-only for any authenticated user
    match /auditLogs/{logId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'; // Only admins can read audit logs
      allow list, update, delete: if false;
    }
  }
}
