rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has one of the specified roles.
    function hasRole(allowedRoles) {
      return request.auth.token.role in allowedRoles;
    }

    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Default-deny all access.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // For now, allow any authenticated user to read/write.
    // This is for development and will be locked down later.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    match /claims/{claimId} {
      allow read, write: if request.auth != null;
    }

    match /invites/{inviteId} {
      allow read, write: if request.auth != null;
    }
    
    match /auditLogs/{logId} {
       allow read, write: if request.auth != null;
    }
  }
}
